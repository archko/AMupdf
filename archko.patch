+    fz_var(text);
+    fz_var(dev);
+    fz_var(buf);
+    fz_var(out);
+
+    fz_try(ctx)
+    {
+        ctm = fz_identity;
+        text = fz_new_stext_page(ctx, fz_bound_page(ctx, page));
